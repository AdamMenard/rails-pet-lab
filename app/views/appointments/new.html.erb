<p id="notice"><%= notice %></p>
<%= form_for @appointment, url: pet_appointments_path do |f| %>
  <div class="form-group">
    <%= f.text_field :reason, class: "form-control", placeholder: "Reason", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :veterinarian, class: "form-control", placeholder: "Veterinarian" %>
  </div>
  <div class="form-group">
    <%= f.datetime_field :time, class: "form-control", placeholder: "Time" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Appointment", class: "btn btn-block btn-success" %>
  </div>
<% end %>
